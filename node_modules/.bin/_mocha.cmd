@ECHO off
SETLOCAL

REM Find the directory of this script
SET dp0=%~dp0

REM Check if node.exe exists in the current directory
IF EXIST "%dp0%\node.exe" (
  SET "_prog=%dp0%\node.exe"
) ELSE (
  SET "_prog=node"
  SET PATHEXT=%PATHEXT:;.JS;=;%
)

REM Run Mocha tests
"%_prog%" "%dp0%\..\mocha\bin\_mocha" %*

ENDLOCAL
